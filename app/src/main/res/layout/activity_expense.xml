<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_expense"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_light"
    tools:context="com.example.dell.expensetracker.ExpenseActivity">

    <TextView
        android:text="Transport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/textView_transport"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:paddingTop="10dp"
        android:textSize="20sp" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_transport"
        android:paddingTop="20dp"
        android:text="0"
        android:layout_below="@+id/textView_title"
        android:layout_alignLeft="@+id/editText_entertainment"
        android:layout_alignStart="@+id/editText_entertainment" />
    <TextView
        android:text="Entertainment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/textView_entertainment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_entertainment"
        android:layout_toRightOf="@id/textView_entertainment"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="40dp"
        android:text="0"
        />

    <TextView
        android:text="Groceries:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/textView_groceries"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="158dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_groceries"
        android:text="0"
        android:layout_alignBaseline="@+id/textView_groceries"
        android:layout_alignBottom="@+id/textView_groceries"
        android:layout_alignLeft="@+id/editText_entertainment"
        android:layout_alignStart="@+id/editText_entertainment" />

    <TextView
        android:text="Food:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/textView_food"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="216dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_food"
        android:text="0"
        android:layout_alignBaseline="@+id/textView_food"
        android:layout_alignBottom="@+id/textView_food"
        android:layout_alignLeft="@+id/editText_groceries"
        android:layout_alignStart="@+id/editText_groceries" />

    <TextView
        android:text="Utilities:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/textView_utilities"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="274dp"
        android:textSize="20sp" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_utilities"
        android:text="0"
        android:layout_alignBaseline="@+id/textView_utilities"
        android:layout_alignBottom="@+id/textView_utilities"
        android:layout_alignLeft="@+id/editText_food"
        android:layout_alignStart="@+id/editText_food" />


    <TextView
        android:text="ADD EXPENSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title"
        android:textSize="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add Expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="addExpense"
        android:layout_below="@+id/editText_utilities"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />


</RelativeLayout>
